<section class="section is-medium">
  <div class="card">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">
    <label class="form-label" for="username-login">Username</label>
    <input
      id="username-login"
      type="text"
      autofocus="true"
      class="input username-input"
      placeholder="User Name"
    />

    <label class="form-label" for="password-login">Password</label>
    <input
      id="password"
      type="password"
      autofocus="true"
      class="input password-input"
      placeholder="Password"
    />
       <input type="checkbox" id="show-password">
    <b>Show Password</b>

    <p class="control login-button">
      <a id="login-btn" class="button is-success">
        login
      </a>
    </p>


    <button class="button is-primary is-outlined">
      <a class="login-link" href="/signup">Don't have an account ? Sign up Now!</a>
    </button>
  </form>
</div>

</section>
<section class="section is-large">

</section>


