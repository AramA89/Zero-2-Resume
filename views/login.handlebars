<div class="card">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">
    <label class="form-label" for="username-login">Username</label>
    <input
      id="username-login"
      type="text"
      autofocus="true"
      class="form-input"
      placeholder="User Name"
    />

    <label class="form-label" for="password-login">Password</label>
    <input
      id="password-login"
      type="password"
      autofocus="true"
      class="form-input"
      placeholder="Password"
    />

    <button type="submit" class="btn">Login!</button>


    
     <div class="message">
      <div class="danger" id="danger">Incorrect username or password.</div>
      <div class="success" id="success">Login successfully!</div>
    </div>



    <button class="button is-primary is-outlined">
      <a class="login-link" href="/signup">Don't have an account ? Sign up Now!</a>
    </button>
  </form>
</div>

<!-- javascript file-->
<script src="/js/login.js"></script>