<section class="signup">
  <div class="card">
    <div class="card-header">
      <div class="card-title">Sign Up</div>
    </div>
    <div class="card-body">
      <form class="signup-form">

        <div>
          <label for="email-signup" class="form-label">Email</label>
          <input
            type="text"
            class="form-input"
            id="email-signup"
            placeholder="Email"
          />
        </div>
        <div>
          <label for="username-signup" class="form-label">Username</label>
          <input
            type="text"
            class="form-input"
            id="username-signup"
            placeholder="User Name"
          />
        </div>
        <div>
          <label for="password-signup" class="form-label">Password</label>
          <input
            type="password"
            class="form-input"
            id="password-signup"
            placeholder="Password"
          />
        </div>
        <div>
          <label for="password-signup" class="form-label">Password</label>
          <input
            type="password"
            class="form-input"
            id="confirmpassword-signup"
            placeholder="Confirm Password"
          />
        </div>
        <div>
          <button type="submit" class="btn">Sign Up</button>
        </div>

        <div class="message">
          <div class="danger" id="danger">Passwords did not match</div>
          <div class="success" id="success">Account created successfully</div>
        </div>

        <button class="button is-primary is-outlined">
          <a class="login-link" href="/login">Already have an account ? Login
            Now!</a>
        </button>

      </form>
    </div>
  </div>
</section>

<script src="/js/signup.js"></script>